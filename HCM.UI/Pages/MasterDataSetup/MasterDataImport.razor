                        </PagerContent>
                    </MudTable>
                    } 
                </MudCardContent>
            </MudCard>
        </div>
    </div> 
    <div class="row mt-5">
        <div class="col-sm-4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Save" StartIcon="@Icons.Material.Filled.Save" Title="Save Data">Save Data</MudButton>
        </div>
    </div>
</div>